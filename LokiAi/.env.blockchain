# LokiAI Blockchain Integration Environment Variables
# Copy this file to .env and configure with your actual values

# ==============================================
# BLOCKCHAIN RPC PROVIDERS
# ==============================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ALCHEMY_ETHEREUM_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ALCHEMY_POLYGON_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# BSC Mainnet
BSC_RPC_URL=https://your-quicknode-bsc-endpoint.com
QUICKNODE_BSC_URL=https://your-quicknode-bsc-endpoint.com

# Arbitrum One
ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
ALCHEMY_ARBITRUM_URL=https://arb-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# ==============================================
# API KEYS
# ==============================================

# Alchemy API Keys
ALCHEMY_API_KEY=your_alchemy_api_key_here

# QuickNode API Keys
QUICKNODE_API_KEY=your_quicknode_api_key_here

# Infura API Keys (alternative)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# ==============================================
# SERVER WALLET PRIVATE KEYS (FOR AUTOMATION)
# ==============================================
# WARNING: Keep these secure and never commit to version control
# Use test wallets with small amounts for initial testing

# Ethereum server wallet private key
ETHEREUM_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Polygon server wallet private key
POLYGON_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# BSC server wallet private key
BSC_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Arbitrum server wallet private key
ARBITRUM_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# ==============================================
# WALLET ENCRYPTION
# ==============================================

# Key for encrypting sensitive wallet data
WALLET_ENCRYPTION_KEY=your_super_secure_encryption_key_here_minimum_32_characters

# ==============================================
# NOTIFICATION SERVICES
# ==============================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Gmail SMTP Configuration
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# MongoDB connection string
MONGODB_URI=mongodb://lokiuser:lokipass123@mongodb:27017/loki_agents?authSource=admin

# Database name
DB_NAME=loki_agents

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Server port
PORT=5000

# CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Environment (development, staging, production)
NODE_ENV=production

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Encryption key for biometric data
ENCRYPTION_KEY=your_biometric_encryption_key_here_minimum_32_characters

# ==============================================
# AGENT CONFIGURATION
# ==============================================

# Agent execution intervals (in milliseconds)
ARBITRAGE_INTERVAL=30000
YIELD_OPTIMIZER_INTERVAL=60000
RISK_MANAGER_INTERVAL=45000
PORTFOLIO_REBALANCER_INTERVAL=120000

# Risk management thresholds
MAX_POSITION_SIZE=0.1
RISK_THRESHOLD=0.05
REBALANCE_THRESHOLD=0.02

# Gas price limits (in gwei)
MAX_GAS_PRICE_ETHEREUM=50
MAX_GAS_PRICE_POLYGON=100
MAX_GAS_PRICE_BSC=10
MAX_GAS_PRICE_ARBITRUM=2

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/lokiai.log

# ==============================================
# MONITORING AND HEALTH CHECKS
# ==============================================

# Health check interval (in milliseconds)
HEALTH_CHECK_INTERVAL=30000

# Connection timeout (in milliseconds)
CONNECTION_TIMEOUT=10000

# ==============================================
# DEVELOPMENT/TESTING
# ==============================================

# Use testnet instead of mainnet (true/false)
USE_TESTNET=false

# Testnet RPC URLs (if USE_TESTNET=true)
ETHEREUM_TESTNET_RPC=https://eth-goerli.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
POLYGON_TESTNET_RPC=https://polygon-mumbai.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# Mock data for development (true/false)
USE_MOCK_DATA=false

# Redis URL for caching
REDIS_URL=redis://redis:6379